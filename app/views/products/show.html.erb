<h1>Product Found!</h1>

<div class= "container-fluid" >
  <div class= "col-md-8 col-sm-12" id= "show">
    <p>
       <%= image_tag(@product.image_url, class: "thumbnail") %>
    </p>
    <p>
      <strong><%= @product.name %></strong>
    </p>
    <p>
      <%= @product.description %>
    </p>
    <p>
      <%= @product.color %>
    </p>
    <p>
      <%= @product.price %>
    </p>
      <div class="container" id="newcomment">
    <%= render 'new_comment' %>
      </div> <!--close new comment-->
  </div><!--close show-->


  <div class= "col-md-4 col-sm-12" id="avgrating">
    <h2> Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></h2>
    
    <div class= "container">
     <%= render 'comments' %>
     </div> <!--close comments container-->
  </div> <!--close avgrating-->
</div><!--close container-fluid--->




</div> <!--close container-fluid-->
