 <% if signed_in? %>
     
        <h4>Add a review:</h4>
            <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
                <p>
                    <%= f.label :body, "Comments" %>
                <br>
                    <%= f.text_area :body %>
                </p>
                
              
                <div class="rating">
                <p>Give a Star Rating</p>
                </div>
            
                <br>
                
                <p>
                    
                    <%= submit_tag("Save",class:"btn btn-success") %>
                </p>
            <% end %>
    
<% end %>
        